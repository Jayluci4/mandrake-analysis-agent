# Biomni Backend Configuration

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Azure OpenAI (if using)
AZURE_OPENAI_API_KEY=your_azure_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4

# DeepSeek (if using)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Google Cloud (for Vertex AI)
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# S3 Configuration (for data lake)
MY_S3_BUCKET_URL=s3://your-bucket-name
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
CORS_ORIGINS=["http://localhost:5173", "http://localhost:9000", "http://localhost:3000"]

# Database (optional)
MONGODB_URL=mongodb://localhost:27017/
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
LOG_FILE=biomni_server.log

# Model Selection
DEFAULT_MODEL=gpt-4
MODEL_TEMPERATURE=0.7
MAX_TOKENS=4000

# Tool Configuration
ENABLE_ALL_TOOLS=true
TOOL_TIMEOUT=600  # seconds

# Session Management
SESSION_TIMEOUT=3600  # 1 hour
MAX_SESSIONS=100